@page
@using HotelDBConsole21.Models
@model RazorPageHotelApp.Pages.Rooms.CreateModel
@{
    // Side til at Kabe et hotelrum //
}
<form method="post">
    <input type="hidden" asp-for="@Model.HotelNo"/>
    <div class="form-group">
        <label asp-for="@Model.Room.Room_No" class="custom-control-label"></label>
        <input type="number" asp-for="@Model.Room.Room_No" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Room.Types" class="custom-control-label"></label>
        <div class="form-group">
            <select asp-for="Room.Types">
                <option value="S">S</option>
                <option value="D">D</option>
                <option value="F">F</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Room.Price" class="custom-control-label"></label>
        <input type="number" asp-for="@Model.Room.Price" class="form-control"/>
    </div>
    <input type="submit" value="create" class="btn btn-primary"/>
</form>